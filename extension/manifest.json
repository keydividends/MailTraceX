{
  "manifest_version": 3,
  "name": "Mail TraceX Extension",
  "version": "0.1.0",
  "description": "Inject tracking pixel, rewrite links, and show quick analytics.",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup/popup.html" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
